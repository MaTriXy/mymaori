<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

    <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:background="#0095BF"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

        <SeekBar
                android:id="@+id/slider"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:max="200"
                android:visibility="gone"
                android:progress="100"
                android:layout_toStartOf="@+id/delete_button"
                android:layout_toLeftOf="@+id/delete_button"/>

        <ImageButton
                android:id="@+id/done_button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:src="@drawable/ok_button_big"
                android:contentDescription="@string/ok"

                android:layout_alignTop="@+id/slider"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

        <ImageButton
                android:id="@+id/delete_button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:visibility="gone"
                android:src="@drawable/delete"
                android:contentDescription="@string/ok"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="82dp"
                android:layout_marginEnd="82dp"/>


    </RelativeLayout>


    <RelativeLayout
            android:id="@+id/capture_id_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top"
            android:layout_above="@+id/bottom_options"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical|center_horizontal">

        <ImageView
                android:id="@+id/image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


    </RelativeLayout>

    <GridView
            android:id="@+id/grid_view"
            android:layout_below="@id/top"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:numColumns="3"
            android:visibility="gone"
            android:stretchMode="columnWidth">
    </GridView>

    <LinearLayout
            android:id="@+id/bottom_options"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:orientation="vertical">

        <LinearLayout
                android:id="@+id/top_options"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#0095BF"
                android:orientation="horizontal">

            <ImageButton
                    android:id="@+id/tatto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:background="#00000000"
                    android:src="@drawable/alpha_2"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>